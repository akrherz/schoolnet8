function mktitle2($map, $imgObj, $x0, $y0, $titlet) {
  $layer = $map->getLayerByName("credits");
                                                                                
  // point feature with text for location
  $point = ms_newpointobj();
  $point->setXY($x0, $y0);
 
  $point->draw($map, $layer, $imgObj, 1,
    $titlet);
}


